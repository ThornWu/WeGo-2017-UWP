<Page
    x:Class="WeGo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WeGo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

   
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"></Setter>
        </Style>

    </Page.Resources>
    
    <Grid x:ConnectionId='1' Name="grid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:ConnectionId='2'  x:Name="S_Tablet">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MySplitView.IsPaneOpen" Value="False"></Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='3'  x:Name="M_Tablet">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="300"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MySplitView.IsPaneOpen" Value="False"></Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='4'  x:Name="L_Tablet">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MySplitView.IsPaneOpen" Value="True"></Setter>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <SplitView x:ConnectionId='5' Grid.Row="1" Name="MySplitView" DisplayMode="CompactInline" CompactPaneLength="40" OpenPaneLength="185" Grid.RowSpan="2">
            <SplitView.Pane>
                <RelativePanel  Background="#2A2E32">
                    <Button x:ConnectionId='6' Content="&#59136;" Name="Hamburger_Button"                                Background="#2A2E32" FontSize="20" Foreground="White" RelativePanel.AlignTopWithPanel="True"></Button>
                        <ListBox x:ConnectionId='7' Margin="-10 0"                                              Background="#2A2E32" RelativePanel.Below="Hamburger_Button">
                        <ListBoxItem x:ConnectionId='15' Name="Homepage_Selection">
                            <StackPanel Orientation="Horizontal" Margin="8 0">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE80F;" FontSize="20" Foreground="White"></TextBlock>
                                <TextBlock Margin="25 0" FontSize="18"  Foreground="White">主页</TextBlock>
                            </StackPanel>
                        </ListBoxItem>
                            <ListBoxItem x:ConnectionId='16' Name="Location_Selection" Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal" Margin="8 0">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE707;" FontSize="20" Foreground="White"></TextBlock>
                                    <TextBlock Margin="25 0" FontSize="18"  Foreground="White">地图</TextBlock>
                                </StackPanel>
                            </ListBoxItem>
                            <ListBoxItem x:ConnectionId='17' Name="Flight_Selection" Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal" Margin="8 0">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE122;" FontSize="20"  Foreground="White"></TextBlock>
                                    <TextBlock Margin="25 0" FontSize="18"  Foreground="White">航班</TextBlock>
                                </StackPanel>
                            </ListBoxItem>
                           <ListBoxItem x:ConnectionId='18' Name="Translation_Selection"  Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal"  Margin="8 0">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE134;"  FontSize="20"  Foreground="White"></TextBlock>
                                    <TextBlock Margin="25 0" FontSize="18"  Foreground="White">翻译</TextBlock>
                                </StackPanel>
                            </ListBoxItem>
                            <ListBoxItem x:ConnectionId='19' Name="Weather_Selection"  Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal"  Margin="8 0" >
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE753;"  FontSize="20" Foreground="White"></TextBlock>
                                    <TextBlock Margin="25 0" FontSize="18"  Foreground="White">天气</TextBlock>
                                </StackPanel>
                            </ListBoxItem>
                        <ListBoxItem x:ConnectionId='20' Name="Photos_Selection"  Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal"  Margin="8 0">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE722;"  FontSize="20" Foreground="White"></TextBlock>
                                    <TextBlock Margin="25 0" FontSize="18" Foreground="White">相册</TextBlock>
                                </StackPanel>
                            </ListBoxItem>
                        <ListBoxItem x:ConnectionId='21' Name="NewsList_Selection" Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal"  Margin="8 0">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE91C;"  FontSize="20" Foreground="White"></TextBlock>
                                <TextBlock Margin="25 0" FontSize="18" Foreground="White">资讯</TextBlock>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                    <Button x:ConnectionId='8' Content="&#xE713;" Name="SettingButton" Background="#2A2E32" FontSize="20" Foreground="White"
                            RelativePanel.AlignBottomWithPanel="True">
                        <Button.Flyout>
                            <Flyout>
                                <Flyout.FlyoutPresenterStyle>
                                    <Style TargetType="FlyoutPresenter">
                                        <Setter Property="BorderBrush" Value="Gray"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                        <Setter Property="MaxWidth" Value="185"/>
                                    </Style>
                                </Flyout.FlyoutPresenterStyle>
                                <StackPanel>
                                    <TextBlock>地图</TextBlock>
                                    <ToggleSwitch x:ConnectionId='9' Name="MapSwitch"                             Width="100"></ToggleSwitch>
                                    <TextBlock>航班</TextBlock>
                                    <ToggleSwitch x:ConnectionId='10' Name="FlightSwitch"                               ></ToggleSwitch>
                                    <TextBlock>翻译</TextBlock>
                                    <ToggleSwitch x:ConnectionId='11' Name="TranslationSwitch"                                    ></ToggleSwitch>
                                    <TextBlock>天气</TextBlock>
                                    <ToggleSwitch x:ConnectionId='12' Name="WeatherSwitch"                                ></ToggleSwitch>
                                    <TextBlock>相册</TextBlock>
                                    <ToggleSwitch x:ConnectionId='13' Name="PhotoSwitch"                               ></ToggleSwitch>
                                    <TextBlock>资讯</TextBlock>
                                    <ToggleSwitch x:ConnectionId='14' Name="NewsSwitch"                              ></ToggleSwitch>
                                </StackPanel>
                            </Flyout>
                        </Button.Flyout>
                    </Button>

                </RelativePanel>
            </SplitView.Pane>
            <SplitView.Content>
                <Frame x:ConnectionId='22' Name="MyFrame"></Frame>
            </SplitView.Content>
        </SplitView>
    </Grid>
    
</Page>

