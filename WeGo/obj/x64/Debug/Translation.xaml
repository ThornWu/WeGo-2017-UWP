<Page
    x:Class="WeGo.Translation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WeGo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='1' Name="TranslationWhole">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>


        <StackPanel Background="#2A2E32" Grid.Row="0"
                    Height="33" Grid.ColumnSpan="3">
        </StackPanel>
        <ScrollViewer Grid.Column="1" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="4*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical" Grid.Column="1"
                    Grid.Row="0" Margin="0 20 0 0">
                    <TextBox x:ConnectionId='5' Name="Translation_Input" PlaceholderText="请输入文字" TextWrapping="Wrap" MinHeight="100" Margin="0 15"></TextBox>
                    <TextBox x:ConnectionId='6' Name="Translation_Output" PlaceholderText="输出结果" TextWrapping="Wrap" MinHeight="100" Margin="0 15"></TextBox>
                    <Button x:ConnectionId='7' FontFamily="微软雅黑" Content="翻译" MinHeight="40" Margin="0 15" Name="Translation_Button"                                  HorizontalAlignment="Right"></Button>
                </StackPanel>
                <Border x:ConnectionId='2' Grid.Row="1" BorderBrush="#FFD2D2D2" Name="Tempbo" Grid.Column="1">
                    <StackPanel  Margin="10 40">
                        <TextBlock x:ConnectionId='3' FontSize="30" FontFamily="Gabriola" TextWrapping="Wrap" Foreground="White" Opacity="0.8"
                           Name="EngSentence">
                        </TextBlock>
                        <TextBlock x:ConnectionId='4' FontSize="18" FontFamily="微软雅黑" TextWrapping="Wrap" Foreground="White" Opacity="0.8"
                           Name="ChiSentence">
                        </TextBlock>
                    </StackPanel>
                </Border>
            </Grid>


        </ScrollViewer>
        
    </Grid>
    
</Page>

