<Page x:ConnectionId='1'
    x:Class="WeGo.Weather"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WeGo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:WeGo"
    mc:Ignorable="d"
    >
    <Grid x:ConnectionId='2' Name="WeatherWhole">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <RelativePanel Grid.Row="0" Background="#2A2E32">
            <AutoSuggestBox x:ConnectionId='34' Width="200" QueryIcon="Find"
                            Name="WeatherCityList" PlaceholderText="搜索"
                                                                     
                                                                           
                            TextMemberPath="id"
                                                                               
                            RelativePanel.AlignRightWithPanel="True">
                <AutoSuggestBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock FontFamily="微软雅黑">
                            <Run Text="{Binding cityZh}"/>
                            <Run Text=","></Run>
                            <Run Text="{Binding leaderZh}"/>
                            <Run Text=","></Run>
                            <Run Text="{Binding provinceZh}"/>
                        </TextBlock>
                    </DataTemplate>
                </AutoSuggestBox.ItemTemplate>
            </AutoSuggestBox>
        </RelativePanel>
        <ScrollViewer Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                
                <Grid x:ConnectionId='3' Name="AfterGetWeather" Visibility="Collapsed" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="80"></RowDefinition>
                    </Grid.RowDefinitions>

                    <RelativePanel Grid.Row="0" Margin="0 20 0 0">
                        <TextBlock x:ConnectionId='26' Name="City" RelativePanel.AlignHorizontalCenterWithPanel="True"
                           FontSize="30" Foreground="White"></TextBlock>
                        <StackPanel x:ConnectionId='27' Orientation="Horizontal"
                            RelativePanel.AlignHorizontalCenterWithPanel="True"
                            RelativePanel.Below="City"
                            Name="DegreeStackPanel">
                            <Image x:ConnectionId='31' Name="WeatherIcon" Width="70" Height="70"
                           Margin="0 0 10 0"></Image>
                            <TextBlock x:ConnectionId='32' Name="Tem" FontSize="80" Margin="0 0 10 0" Foreground="White"></TextBlock>
                            <TextBlock x:ConnectionId='33' Visibility="Collapsed" FontSize="20" Margin="0 10 0 0"
                                   Name="Celsius" Foreground="White">℃</TextBlock>
                        </StackPanel>
                        <TextBlock x:ConnectionId='28' Name="Cond" RelativePanel.Below="DegreeStackPanel"
                           FontSize="24" RelativePanel.AlignHorizontalCenterWithPanel="True"
                                   Foreground="White"></TextBlock>
                        <StackPanel RelativePanel.AlignHorizontalCenterWithPanel="True"
                                RelativePanel.Below="Cond"
                                Orientation="Horizontal"
                                Margin="0 10 0 0">
                            <TextBlock x:ConnectionId='29' Name="WindSpeed" Margin="0 0 20 0" Foreground="White"></TextBlock>
                            <TextBlock x:ConnectionId='30' Name="Humidity" Foreground="White"></TextBlock>
                        </StackPanel>
                    </RelativePanel>


                    <RelativePanel Grid.Row="1" Margin="0 25 0 0">
                        <TextBlock x:ConnectionId='14' Name="DailyTitle"
                               RelativePanel.AlignHorizontalCenterWithPanel="True"
                               Margin="-208 0 0 10"
                               FontSize="20" Foreground="White">3日天气预报</TextBlock>
                        <FlipView x:ConnectionId='15'                                       
                          RelativePanel.AlignHorizontalCenterWithPanel="True"
                          RelativePanel.Below="DailyTitle"
                          Name="DailyGridView"  Width="420" Height="180">
                            <FlipView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel Orientation="Vertical"/>
                                </ItemsPanelTemplate>
                            </FlipView.ItemsPanel>
                            <FlipView.ItemTemplate>
                                <DataTemplate                               >
                                    <Border x:ConnectionId='16' BorderThickness="3" BorderBrush="#FFD2D2D2"
                                    Padding="20">
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel>
                                                <TextBlock x:ConnectionId='23'                      FontSize="16" Foreground="White"/>
                                                <Image x:ConnectionId='24'                             
                                           Width="60" Height="60" Margin="0 15"/>
                                                <TextBlock x:ConnectionId='25'                            HorizontalAlignment="Center" Foreground="White"/>
                                            </StackPanel>
                                         
                                           
                                            <StackPanel Orientation="Horizontal" Margin="20 0" VerticalAlignment="Center">
                                                <TextBlock x:ConnectionId='21'                        
                                               FontSize="45" Foreground="White"/>
                                                <TextBlock FontSize="45" Foreground="White">°</TextBlock>
                                                <TextBlock x:ConnectionId='22'                        
                                               FontSize="30" Foreground="White"
                                               Margin="15 40 0 0" Opacity="0.7"/>
                                                <TextBlock FontSize="30"
                                                    Margin="0 40 0 0" Opacity="0.7" Foreground="White">°</TextBlock>
                                            </StackPanel>

                                            <StackPanel VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal" Margin="0 20">
                                                    <TextBlock Foreground="White">风力：</TextBlock>
                                                    <TextBlock x:ConnectionId='19'                          Foreground="White"/>
                                                    <TextBlock x:ConnectionId='20'                          Foreground="White"/>
                                                    <TextBlock Foreground="White">级</TextBlock>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Foreground="White">相对湿度：</TextBlock>
                                                    <TextBlock x:ConnectionId='18'                     Foreground="White"/>
                                                    <TextBlock Foreground="White">%</TextBlock>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal"  Margin="0 20">
                                                    <TextBlock Foreground="White">紫外线指数：</TextBlock>
                                                    <TextBlock x:ConnectionId='17'                    Foreground="White"/>
                                                    <TextBlock Foreground="White">级</TextBlock>
                                                </StackPanel>

                                            </StackPanel>


                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </FlipView.ItemTemplate>
                        </FlipView>

                    </RelativePanel>

                    <RelativePanel Grid.Row="2" Margin="0 25 0 0">
                        <TextBlock x:ConnectionId='7' Name="SuggstionTitle"
                               RelativePanel.AlignHorizontalCenterWithPanel="True"
                               Margin="-208 0 0 10"
                               FontSize="20" Foreground="White">生活指数</TextBlock>
                        <FlipView x:ConnectionId='8'                                           
                               Width="420" Height="140"
                               RelativePanel.AlignHorizontalCenterWithPanel="True"
                               RelativePanel.Below="SuggstionTitle">
                            <FlipView.ItemTemplate>
                                <DataTemplate                                    >
                                    <StackPanel x:ConnectionId='9'>
                                        <Border BorderThickness="3" BorderBrush="#FFD2D2D2"
                                    Padding="20 15"  Width="420" Height="140" >
                                            <StackPanel Orientation="Horizontal" Width="360" Height="100">
                                                <StackPanel VerticalAlignment="Center">
                                                    <Image x:ConnectionId='12'                              Width="40" Height="40" Margin="0 20 0 10"/>
                                                    <TextBlock x:ConnectionId='13'                       TextWrapping="Wrap" Foreground="White"></TextBlock>
                                                </StackPanel>
                                                <StackPanel Width="280" Height="100" Margin="20 0" VerticalAlignment="Center">
                                                    <TextBlock x:ConnectionId='10'                     TextWrapping="Wrap" Foreground="White"></TextBlock>
                                                    <TextBlock x:ConnectionId='11'                     TextWrapping="Wrap" Foreground="White"></TextBlock>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </DataTemplate>
                            </FlipView.ItemTemplate>
                        </FlipView>
                    </RelativePanel>
                </Grid>


                <Grid x:ConnectionId='4' Name="BeforeGetWeather" Grid.Row="2">
                    <RelativePanel>
                        <ProgressRing x:ConnectionId='5' Width="80" Height="80" IsActive="True"
                                  RelativePanel.AlignHorizontalCenterWithPanel="True"
                                  Name="BeforeGetWeatherProcess"></ProgressRing>
                        <TextBlock x:ConnectionId='6' Name="More" RelativePanel.AlignHorizontalCenterWithPanel="True"
                               RelativePanel.Below="BeforeGetWeatherProcess"
                               Margin="0 20 0 0">正在获取温度中请稍后</TextBlock>
                    </RelativePanel>
                </Grid>
            </Grid>


        </ScrollViewer>

    </Grid>
</Page>

