<Page x:ConnectionId='1'
    x:Class="WeGo.Flight"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WeGo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:WeGo" 
    mc:Ignorable="d">




    <Grid x:ConnectionId='2' Name="FlightWhole">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Height="33" Background="#2A2E32">
            <Button x:ConnectionId='24' Name="BackButton" Content="&#xE0A6;"                         
                        HorizontalAlignment="Left" FontSize="20"
                        Background="#2A2E32" Visibility="Collapsed" Foreground="White"></Button>
        </Grid>
        <ScrollViewer Grid.Row="1">
            <Grid>
                <StackPanel x:ConnectionId='3' Name="BeforeSearch" HorizontalAlignment="Center"
                        Margin="0 80" Visibility="Collapsed">
                    <StackPanel x:ConnectionId='17' Name="StartPart" Orientation="Horizontal"
                            Margin="0 15">
                        <TextBlock VerticalAlignment="Center">出发地：</TextBlock>
                        <AutoSuggestBox x:ConnectionId='23' Name="FlightStart"
                                    Width="160"
                                    PlaceholderText="北京"
                                                                         
                                    ></AutoSuggestBox>

                    </StackPanel>
                    <StackPanel x:ConnectionId='18' Name="EndPart" Orientation="Horizontal"
                             Margin="0 15">
                        <TextBlock VerticalAlignment="Center">目的地：</TextBlock>
                        <AutoSuggestBox x:ConnectionId='22' Name="FlightEnd"
                                    Width="160"
                                    PlaceholderText="上海"
                                                                       ></AutoSuggestBox>
                    </StackPanel>
                    <StackPanel x:ConnectionId='19' Name="DatePart" Orientation="Horizontal"
                             Margin="0 15">
                        <TextBlock VerticalAlignment="Center">日期：</TextBlock>
                        <CalendarDatePicker x:ConnectionId='21' Margin="15 0 0 0" Width="160" Name="MyCalendar">
                        </CalendarDatePicker>
                    </StackPanel>
                    <Button x:ConnectionId='20' FontFamily="微软雅黑" Content="搜索" HorizontalAlignment="Right"
                        Margin="0 15"                     ></Button>


                </StackPanel>

                <RelativePanel x:ConnectionId='4' Name="DuringSearch" HorizontalAlignment="Center" Visibility="Collapsed">
                    <ProgressRing x:ConnectionId='15' Width="80" Height="80" IsActive="True"
                                  RelativePanel.AlignHorizontalCenterWithPanel="True"
                                  Name="BeforeGetWeatherProcess"
                                  RelativePanel.AlignVerticalCenterWithPanel="True"></ProgressRing>
                        <TextBlock x:ConnectionId='16' Name="More" RelativePanel.AlignHorizontalCenterWithPanel="True"
                               RelativePanel.Below="BeforeGetWeatherProcess"
                               Margin="0 20 0 0">正在获取信息中请稍后</TextBlock>

                </RelativePanel>
                
                <Grid x:ConnectionId='5' Name="AfterSearch"  HorizontalAlignment="Center" Visibility="Collapsed">

                    <GridView x:ConnectionId='6' Name="FlightListView"
                          IsItemClickEnabled="False"
                                                            >
                        <GridView.ItemTemplate>
                            <DataTemplate                               >
                                <Border x:ConnectionId='7' BorderThickness="3" BorderBrush="#FFD2D2D2"
                                    Padding="10 20" Margin="10" Background="#afdfe4"
                                    Width="420">
                                    <RelativePanel>
                                        <StackPanel Orientation="Vertical" Margin="0 0 15 0" RelativePanel.AlignLeftWithPanel="True" Name="CompanyLogo">
                                            <Image x:ConnectionId='12'                               Width="30" Height="30"></Image>
                                            <TextBlock x:ConnectionId='13'                         FontFamily="微软雅黑" FontSize="16"></TextBlock>
                                            <TextBlock x:ConnectionId='14'                             FontFamily="微软雅黑" FontSize="16"></TextBlock>
                                        </StackPanel>
                                        <StackPanel Orientation="Vertical" Margin="0 20 15 0" RelativePanel.RightOf="CompanyLogo">
                                            <TextBlock x:ConnectionId='10'                            FontFamily="微软雅黑" FontSize="14"></TextBlock>
                                            <TextBlock x:ConnectionId='11'                           FontFamily="微软雅黑" FontSize="20" HorizontalAlignment="Center"></TextBlock>
                                        </StackPanel>
                                        <StackPanel Orientation="Vertical" Margin="0 20 5 0" RelativePanel.AlignRightWithPanel="True">
                                            <TextBlock x:ConnectionId='8'                             FontFamily="微软雅黑" FontSize="14"></TextBlock>
                                            <TextBlock x:ConnectionId='9'                            FontFamily="微软雅黑" FontSize="20" HorizontalAlignment="Center"></TextBlock>
                                        </StackPanel>
                                    </RelativePanel>
                                </Border>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </Grid>

            </Grid>

        </ScrollViewer>
    </Grid>  

</Page>

